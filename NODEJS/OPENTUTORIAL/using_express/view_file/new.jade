doctype html
html
    head
        meta(charset='utf-8')
    body
        
        h1 ServerSide Javascript
        ul
            each topic in topics
                li 
                    a(href="/topic/"+topic)=topic
        article
            h2= title
            =description

            form(method="post",action="/topic")
                p
                    input(type="text",name="title",placeholder="title")
                p
                    textarea(name="description",placeholder="description")
                p
                    input(type="submit")