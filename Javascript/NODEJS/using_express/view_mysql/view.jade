doctype html
html
    head
        meta(charset='utf-8')
    body
        h1 
            a(href="/topic") ServerSide Javascript
        ul
            each topic in topics
                li 
                    a(href="/topic/"+topic.id)= topic.title
        article
            if topic
                h2= topic.title
                
                p
                    =topic.description
                p
                    =topic.author
            else
                h2 Welcome
                | Node javascript tutorial

            ul
                li 
                    a(href="/topic/add") add
                if(topic)
                    li 
                        a(href="/topic/"+topic.id+"/edit") edit               
                    li 
                        a(href="/topic/"+topic.id+"/delete") delete